ARG IMAGE_NAME
FROM ${IMAGE_NAME}:9.1-base-centos7 as base

FROM base as base-amd64

ENV NV_CUDA_LIB_VERSION 9.1.85-1
ENV NV_NVTX_VERSION 9.1.85-1
ENV NV_LIBNPP_VERSION 9.1.85-1

ENV NV_LIBCUBLAS_PACKAGE_NAME libcublas
ENV NV_LIBCUBLAS_VERSION 9.1.85-1
ENV NV_LIBCUBLAS_PACKAGE ${NV_LIBCUBLAS_PACKAGE_NAME}-${NV_LIBCUBLAS_VERSION}

FROM base as base-ppc64le

ENV NV_CUDA_LIB_VERSION 9.1.85-1
ENV NV_NVTX_VERSION 9.1.85-1
ENV NV_LIBNPP_VERSION 9.1.85-1

ENV NV_LIBCUBLAS_PACKAGE_NAME libcublas
ENV NV_LIBCUBLAS_VERSION 9.1.85-1
ENV NV_LIBCUBLAS_PACKAGE ${NV_LIBCUBLAS_PACKAGE_NAME}-${NV_LIBCUBLAS_VERSION}


FROM base-${TARGETARCH}

ARG TARGETARCH

LABEL maintainer "NVIDIA CORPORATION <sw-cuda-installer@nvidia.com>"

RUN yum install -y \
    cuda-libraries-9-1-${NV_CUDA_LIB_VERSION} \
    cuda-npp-9-1-${NV_LIBNPP_VERSION} \
    ${NV_LIBCUBLAS_PACKAGE} \
    && yum clean all \
    && rm -rf /var/cache/yum/*

