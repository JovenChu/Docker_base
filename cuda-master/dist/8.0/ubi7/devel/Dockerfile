ARG IMAGE_NAME
FROM ${IMAGE_NAME}:8.0-runtime-ubi7 as base

FROM base as base-amd64

ENV NV_CUDA_LIB_VERSION 8.0.61-1
ENV NV_NVPROF_VERSION 8.0.61-1
ENV NV_CUDA_CUDART_DEV_VERSION 8.0.61-1
ENV NV_NVML_DEV_VERSION 8.0.61-1

ENV NV_LIBNPP_DEV_VERSION 8.0.61-1

ENV NV_LIBCUBLAS_DEV_PACKAGE_NAME libcublas-devel
ENV NV_LIBCUBLAS_DEV_VERSION 8.0.61.2-1
ENV NV_LIBCUBLAS_DEV_PACKAGE ${NV_LIBCUBLAS_DEV_PACKAGE_NAME}-${NV_LIBCUBLAS_DEV_VERSION}

ENV NV_CUDA_RUNTIME_DEV_VERSION 8.0.61-1
ENV NV_CUDA_RUNTIME_DEV_PACKAGE cuda-core-8-0-${NV_CUDA_RUNTIME_DEV_VERSION}
ENV NV_CUDA_CORE_VERSION 8.0.61-1
ENV NV_CUDA_CORE_PACKAGE cuda-core-8-0-${NV_CUDA_CORE_VERSION}
ENV NV_CUDA_DRIVER_DEV_VERSION 8.0.61-1
ENV NV_CUDA_DRIVER_DEV_PACKAGE cuda-driver-dev-8-0-${NV_CUDA_DRIVER_DEV_VERSION}
ENV NV_CUDA_MISC_HEADERS_VERSION 8.0.61-1
ENV NV_CUDA_MISC_HEADERS_PACKAGE cuda-misc-headers-8-0-${NV_CUDA_MISC_HEADERS_VERSION}
ENV NV_CUDA_NVRTC_DEV_VERSION 8.0.61-1
ENV NV_CUDA_NVRTC_DEV_PACKAGE cuda-nvrtc-dev-8-0-${NV_CUDA_NVRTC_DEV_VERSION}
ENV NV_CUDA_NVGRAPH_DEV_VERSION 8.0.61-1
ENV NV_CUDA_NVGRAPH_DEV_PACKAGE cuda-nvgraph-dev-8-0-${NV_CUDA_NVGRAPH_DEV_VERSION}
ENV NV_LIBCUSOLVER_DEV_VERSION 8.0.61-1
ENV NV_LIBCUSOLVER_DEV_PACKAGE cuda-cusolver-dev-8-0-${NV_LIBCUSOLVER_DEV_VERSION}
ENV NV_LIBCUBLAS_DEV_VERSION 8.0.61.2-1
ENV NV_LIBCUBLAS_DEV_PACKAGE cuda-cublas-dev-8-0-${NV_LIBCUBLAS_DEV_VERSION}
ENV NV_LIBCUFFT_DEV_VERSION 8.0.61-1
ENV NV_LIBCUFFT_DEV_PACKAGE cuda-cufft-dev-8-0-${NV_LIBCUFFT_DEV_VERSION}
ENV NV_LIBCURAND_DEV_VERSION 8.0.61-1
ENV NV_LIBCURAND_DEV_PACKAGE cuda-curand-dev-8-0-${NV_LIBCURAND_DEV_VERSION}
ENV NV_LIBCUSPARSE_DEV_VERSION 8.0.61-1
ENV NV_LIBCUSPARSE_DEV_PACKAGE cuda-cusparse-dev-8-0-${NV_LIBCUSPARSE_DEV_VERSION}
ENV NV_LIBNPP_DEV_VERSION 8.0.61-1
ENV NV_LIBNPP_DEV_PACKAGE cuda-npp-dev-8-0-${NV_LIBNPP_DEV_VERSION}

FROM base as base-ppc64le

ENV NV_CUDA_LIB_VERSION 8.0.61-1
ENV NV_NVPROF_VERSION 8.0.61-1
ENV NV_CUDA_CUDART_DEV_VERSION 8.0.61-1
ENV NV_NVML_DEV_VERSION 8.0.61-1

ENV NV_LIBNPP_DEV_VERSION 8.0.61-1

ENV NV_LIBCUBLAS_DEV_PACKAGE_NAME libcublas-devel
ENV NV_LIBCUBLAS_DEV_VERSION 8.0.61.2-1
ENV NV_LIBCUBLAS_DEV_PACKAGE ${NV_LIBCUBLAS_DEV_PACKAGE_NAME}-${NV_LIBCUBLAS_DEV_VERSION}

ENV NV_CUDA_RUNTIME_DEV_VERSION 8.0.61-1
ENV NV_CUDA_RUNTIME_DEV_PACKAGE cuda-core-8-0-${NV_CUDA_RUNTIME_DEV_VERSION}
ENV NV_CUDA_CORE_VERSION 8.0.61-1
ENV NV_CUDA_CORE_PACKAGE cuda-core-8-0-${NV_CUDA_CORE_VERSION}
ENV NV_CUDA_DRIVER_DEV_VERSION 8.0.61-1
ENV NV_CUDA_DRIVER_DEV_PACKAGE cuda-driver-dev-8-0-${NV_CUDA_DRIVER_DEV_VERSION}
ENV NV_CUDA_MISC_HEADERS_VERSION 8.0.61-1
ENV NV_CUDA_MISC_HEADERS_PACKAGE cuda-misc-headers-8-0-${NV_CUDA_MISC_HEADERS_VERSION}
ENV NV_CUDA_NVRTC_DEV_VERSION 8.0.61-1
ENV NV_CUDA_NVRTC_DEV_PACKAGE cuda-nvrtc-dev-8-0-${NV_CUDA_NVRTC_DEV_VERSION}
ENV NV_CUDA_NVGRAPH_DEV_VERSION 8.0.61-1
ENV NV_CUDA_NVGRAPH_DEV_PACKAGE cuda-nvgraph-dev-8-0-${NV_CUDA_NVGRAPH_DEV_VERSION}
ENV NV_LIBCUSOLVER_DEV_VERSION 8.0.61-1
ENV NV_LIBCUSOLVER_DEV_PACKAGE cuda-cusolver-dev-8-0-${NV_LIBCUSOLVER_DEV_VERSION}
ENV NV_LIBCUBLAS_DEV_VERSION 8.0.61.2-1
ENV NV_LIBCUBLAS_DEV_PACKAGE cuda-cublas-dev-8-0-${NV_LIBCUBLAS_DEV_VERSION}
ENV NV_LIBCUFFT_DEV_VERSION 8.0.61-1
ENV NV_LIBCUFFT_DEV_PACKAGE cuda-cufft-dev-8-0-${NV_LIBCUFFT_DEV_VERSION}
ENV NV_LIBCURAND_DEV_VERSION 8.0.61-1
ENV NV_LIBCURAND_DEV_PACKAGE cuda-curand-dev-8-0-${NV_LIBCURAND_DEV_VERSION}
ENV NV_LIBCUSPARSE_DEV_VERSION 8.0.61-1
ENV NV_LIBCUSPARSE_DEV_PACKAGE cuda-cusparse-dev-8-0-${NV_LIBCUSPARSE_DEV_VERSION}
ENV NV_LIBNPP_DEV_VERSION 8.0.61-1
ENV NV_LIBNPP_DEV_PACKAGE cuda-npp-dev-8-0-${NV_LIBNPP_DEV_VERSION}

LABEL maintainer "NVIDIA CORPORATION <sw-cuda-installer@nvidia.com>"


RUN yum install -y \
    make \
    cuda-nvml-dev-8-0-${NV_NVML_DEV_VERSION} \
    cuda-command-line-tools-8-0-${NV_CUDA_LIB_VERSION} \
    ${NV_CUDA_CORE_PACKAGE} \
    ${NV_CUDA_MISC_HEADERS_PACKAGE} \
    cuda-license-${NV_CUDA_CUDART_DEV_VERSION} \
    ${NV_CUDA_NVRTC_DEV_PACKAGE} \
    ${NV_CUDA_NVGRAPH_DEV_PACKAGE} \
    ${NV_LIBCUSOLVER_DEV_PACKAGE} \
    ${NV_LIBCUBLAS_DEV_PACKAGE} \
    ${NV_LIBCUFFT_DEV_PACKAGE} \
    ${NV_LIBCURAND_DEV_PACKAGE} \
    ${NV_LIBCUSPARSE_DEV_PACKAGE} \
    ${NV_LIBNPP_DEV_PACKAGE} \
    ${NV_CUDA_CUDART_PACKAGE} \
    ${NV_CUDA_DRIVER_DEV_PACKAGE} \
    && yum clean all \
    && rm -rf /var/cache/yum/*

ENV LIBRARY_PATH /usr/local/cuda/lib64/stubs
